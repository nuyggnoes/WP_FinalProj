<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Tiny5&display=swap" rel="stylesheet" />
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/header.css" />
    <title>WPFinalProj</title>
  </head>
  <body>
    <header class="header-section">
      <div class="main-header">
        <div class="left-side"><i class="bx bx-menu"></i></div>
        <div class="search-container">
          <form method="get">
            <div class="search-bar">
              <input id="searchKeyword" name="searchKeyword" type="text" placeholder="search" />
            </div>
            <button class="search-icon" type="submit">
              <label for="searchKeyword">
                <i class="bx bx-search"></i>
              </label>
            </button>
          </form>
        </div>
        <div class="logo-container">
          <a href="/" class="main-logo">MainLogo</a>
          <ul class="category-item-list">
            <li><a href="/search?category=Best">Best</a></li>
            <li><a href="/search?category=Outer">Outer</a></li>
            <li><a href="/search?category=Top">Top</a></li>
            <li><a href="/search?category=Bottom">Bottom</a></li>
            <li><a href="/search?category=Shoes/Acc">Shoes/Acc</a></li>
          </ul>
        </div>
        <div class="cart">
          <i class="bx bx-cart"></i>
        </div>
        <div class="right-side">
          <i class="bx bx-user"></i>
        </div>
      </div>
    </header>
    <div class="overlay"></div>
    <div class="left-sidebar">
      <h2>Main Logo</h2>
      <div class="left-sidebar-category-container">
        <h1>Category</h1>
        <hr />
        <a href="/search?category=New">Best</a>
        <a href="/search?category=Outer">Outer</a>
        <a href="/search?category=Top">Top</a>
        <a href="/search?category=Bottom">Bottom</a>
        <a href="/search?category=Shoes/Acc">Shoes/Acc</a>
      </div>
      <div class="left-sidebar-bottom">
        <div>
          <h1>CUSTOMER CENTER</h1>
          <hr />
          010-2870-0607
        </div>
        <div style="font-size: 10px">
          mon-fri am09:00-pm07:00<br />
          휴무/토,일요일,공휴일
        </div>
      </div>
    </div>
    <div class="right-sidebar">
      <h2>MYPAGE</h2>
      <% if (session && session.user) { %>
      <p>환영합니다, <%= session.user.person_name %>님!</p>
      <a href="/auth/logout">로그아웃</a>
      <% } else { %>
      <a href="/auth/login">로그인하러가기</a>
      <% } %>
      <div class="btn-list-container">
        <button type="button" id="cart-product">
          <i class="bx bx-cart"></i>
          장바구니
        </button>
        <button type="button" id="liked-product">
          <i class="bx bx-heart"></i>
          관심상품
        </button>
      </div>
      <div class="btn-list-container">
        <button type="button" id="order-product">
          <i class="bx bx-list-ul"></i>
          주문조회
        </button>
        <button type="button" id="user-info">
          <i class="bx bx-user"></i>
          회원정보
        </button>
      </div>
    </div>
  </body>
  <script>
    window.addEventListener("scroll", function () {
      const header = document.querySelector(".header-section");
      const mainLogo = document.querySelector(".main-logo");

      if (window.scrollY > 50) {
        header.classList.add("shrink");
        mainLogo.classList.add("shrink");
      } else {
        header.classList.remove("shrink");
        mainLogo.classList.remove("shrink");
      }
    });
    const leftSidebar = document.querySelector(".left-sidebar");
    const rightSidebar = document.querySelector(".right-sidebar");
    const overlay = document.querySelector(".overlay");
    document.querySelector(".left-side").addEventListener("click", () => {
      overlay.classList.toggle("visible");
      leftSidebar.classList.toggle("visible");
    });
    document.querySelector(".right-side").addEventListener("click", () => {
      overlay.classList.toggle("visible");
      rightSidebar.classList.toggle("visible");
    });
    document.querySelector(".overlay").addEventListener("click", () => {
      rightSidebar.classList.remove("visible");
      leftSidebar.classList.remove("visible");
      overlay.classList.remove("visible");
    });
    document.querySelector("#order-product").addEventListener("click", () => {
      console.log("Order selected");
    });
    document.querySelector("#cart-product").addEventListener("click", () => {
      console.log("Cart product");
    });
    document.querySelector("#liked-product").addEventListener("click", () => {
      console.log("Liked product");
    });
    document.querySelector("#user-info").addEventListener("click", () => {
      console.log("User info");
    });
  </script>
</html>
